{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile",
			"type": "shell",
			"command": "g++.exe \"${fileDirname}\\${fileBasename}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" -Ofast -m64 -std=c++2a -Wall -pipe C:/GL/glad.c -I\"C:/GL/include\" -I\"E:/GLpygame\" -I\"D:/freetype-2.12.1/include\" -L\"E:/GLpygame/libs\"  -s -lglfw3 -lgdi32 -lfreetype -static",
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": []
		},
		{
			"label": "Compile & Run",
			"type": "shell",
			"dependsOn": [
				"Compile",
				"Run"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		}
	]
}